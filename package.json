{
	"publisher": "koukikitamura",
	"repository": {
		"type:": "git",
		"url": "https://github.com/koukikitamura/vscode-switch-test"
	},
	"name": "switch-test",
	"displayName": "Switch Test",
	"description": "Switch between file and test file.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.switchTest"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.switchTest",
				"title": "Switch Test"
			}
		],
		"keybindings": [
			{
				"command": "extension.switchTest",
				"key": "ctrl+t",
				"mac": "cmd+t",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Switch test",
			"properties": {
				"switchTest.foo": {
					"type": "string",
					"default": "bar",
					"description": "foo"
				},
				"switchTest.testFileSuffix": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"extension": {
								"type": "string",
								"description": "file extension"
							},

							"testFileSuffixes": {
								"type": "array",
								"description": "test file suffix list",
								"items": {
									"type": "string"
								}
							}
						}
					},
					"default": [
						{
							"extension": ".rb",
							"testFileSuffixes": ["_test", "_spec"]
						},
						{
							"extension": ".go",
							"testFileSuffixes": ["_test"]
						},
						{
							"extension": ".js",
							"testFileSuffixes": [".test", ".spec"]
						},
						{
							"extension": ".ts",
							"testFileSuffixes": [".test", ".spec"]
						},
						{
							"extension": ".jsx",
							"testFileSuffixes": [".stories"]
						}
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/chai": "^4.2.21",
		"@types/chai-spies": "^1.0.3",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/proxyquire": "^1.3.28",
		"@types/vscode": "^1.59.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"chai": "^4.3.4",
		"chai-spies": "^1.0.0",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^8.3.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"prettier": "^2.3.2",
		"proxyquire": "^2.1.3",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
